<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.countryDetail.CountryDeatil"
    android:background="@android:color/white">
    <RelativeLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/bg_color">
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:src="@drawable/back_img"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Country Details"
            android:layout_toRightOf="@+id/back_btn"
            android:textColor="@android:color/white"
            android:fontFamily="@font/montserrat"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true">

        </TextView>

    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolBar"
    android:background="@color/card_bg"
  >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/card_bg">
        <ImageView
            android:id="@+id/contry_flag_IV"
            android:layout_marginTop="3dp"
            android:layout_width="130dp"

            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_toRightOf="@+id/contry_flag_Label"
            ></ImageView>


      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="10dp"
          >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"

                  >



                  <TextView
                      android:id="@+id/contry_Name_Label"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="3dp"
                      android:fontFamily="@font/montserrat"
                      android:text="Country Name: "
                      android:textStyle="bold"
                      android:textColor="@color/bg_color"
                      android:textSize="15sp"></TextView>

                  <TextView
                      android:id="@+id/contry_Name_TV"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="5dp"
                      android:layout_marginTop="3dp"
                      android:layout_toRightOf="@+id/contry_Name_Label"
                      android:fontFamily="@font/montserrat"
                      android:text="--"
                      android:textColor="@color/bg_color"
                      android:textSize="15sp"></TextView>



              </RelativeLayout>
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"

                  >



                  <TextView
                      android:id="@+id/contry_region_Label"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="7dp"
                      android:fontFamily="@font/montserrat"
                      android:text="Region: "
                      android:textColor="@color/bg_color"
                      android:textStyle="bold"
                      android:textSize="15sp"></TextView>

                  <TextView
                      android:id="@+id/contry_region_TV"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="5dp"
                      android:layout_marginTop="7dp"
                      android:layout_toRightOf="@+id/contry_region_Label"
                      android:fontFamily="@font/montserrat"
                      android:text="--"
                      android:textColor="@color/bg_color"
                      android:textSize="15sp"></TextView>



              </RelativeLayout>
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"

                  >



                  <TextView
                      android:id="@+id/contry_subregion_Label"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="7dp"
                      android:fontFamily="@font/montserrat"
                      android:textStyle="bold"
                      android:text="Sub region: "
                      android:textColor="@color/bg_color"
                      android:textSize="15sp"></TextView>

                  <TextView
                      android:id="@+id/contry_subregion_TV"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="5dp"
                      android:layout_marginTop="7dp"
                      android:layout_toRightOf="@+id/contry_subregion_Label"
                      android:fontFamily="@font/montserrat"
                      android:text="Afganistan"
                      android:textColor="@color/bg_color"
                      android:textSize="15sp"></TextView>



              </RelativeLayout>
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"

                  >



                  <TextView
                      android:id="@+id/contry_capital_Label"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="7dp"
                      android:fontFamily="@font/montserrat"
                      android:text="Capital: "
                      android:textColor="@color/bg_color"
                      android:textStyle="bold"
                      android:textSize="15sp"></TextView>

                  <TextView
                      android:id="@+id/contry_capital_TV"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="5dp"
                      android:layout_marginTop="7dp"
                      android:layout_toRightOf="@+id/contry_capital_Label"
                      android:fontFamily="@font/montserrat"
                      android:text="---"
                      android:textColor="@color/bg_color"
                      android:textSize="15sp"></TextView>



              </RelativeLayout>
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"

                  >



                  <TextView
                      android:id="@+id/contry_pupulation_Label"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="7dp"
                      android:fontFamily="@font/montserrat"
                      android:text="Population: "
                      android:textColor="@color/bg_color"
                      android:textStyle="bold"
                      android:textSize="15sp"></TextView>

                  <TextView
                      android:id="@+id/contry_population_TV"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="5dp"
                      android:layout_marginTop="7dp"
                      android:layout_toRightOf="@+id/contry_pupulation_Label"
                      android:fontFamily="@font/montserrat"
                      android:text="--"
                      android:textColor="@color/bg_color"
                      android:textSize="15sp"></TextView>



              </RelativeLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"

                  >



                  <TextView
                      android:id="@+id/contry_languages_Label"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="7dp"
                      android:fontFamily="@font/montserrat"
                      android:text="Languages: "
                      android:textColor="@color/bg_color"
                      android:textStyle="bold"
                      android:textSize="15sp"></TextView>


                  <TextView
                      android:id="@+id/contry_laguages_TV"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="5dp"
                      android:layout_marginTop="7dp"
                      android:fontFamily="@font/montserrat"

                      android:text="---"
                      android:textColor="@color/bg_color"
                      android:textSize="15sp"></TextView>



              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"

                  >



                  <TextView
                      android:id="@+id/contry_border_Label"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="7dp"
                      android:fontFamily="@font/montserrat"
                      android:text="Border: "
                      android:textStyle="bold"
                      android:textColor="@color/bg_color"
                      android:textSize="15sp"></TextView>


                  <TextView
                      android:id="@+id/contry_border_TV"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="5dp"
                      android:layout_marginTop="7dp"
                      android:fontFamily="@font/montserrat"

                      android:text="Kabul"
                      android:textColor="@color/bg_color"
                      android:textSize="15sp"></TextView>



              </LinearLayout>
          </LinearLayout>
      </RelativeLayout>







    </LinearLayout>
</ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_color" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/bg_color"
            android:gravity="center"
            android:textSize="8sp"
            android:layout_marginTop="2dp"
            android:text="Developed By\n Mehraj Ud din Bhat\nIntershala Android Assignment\nCompany Name:Glyka "></TextView>
    </LinearLayout>


</RelativeLayout>